@require './vendor/material-icons.styl'
@require './vendor/vuetify.styl'

.no-underline
  text-decoration: none

.small-caps
  font-variant: small-caps

.cursor
  cursor: pointer

.not-allowed
  cursor: not-allowed

.w-100
  width: 100%

.w-50
  width: 50%

.h-100
  height: 100%

.vh-90
  height: 90vh

.btn--normal
  width: 200px

/* Font */
.f6
  font-size: 8pt

.truncate
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

/* Flexbox */
.flex
  display: flex

.row
  display: flex
  flex-direction: row

.column
  display: flex
  flex-direction: column

.wrap
  flex-wrap: wrap

.flex-initial
  flex: 0 1 auto

.self-center
  align-self: center

.align-center
  align-items: center

.justify-center
  justify-content: center
